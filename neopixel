#include <Adafruit_NeoPixel.h>
#define BUTTON_PIN 2
#define PIXEL_PIN 6
#define PIXEL_COUNT  50
int yellow_block[4] = {48,49,43,44};
int purble_T[4] = {47,48,49,43};
int blue_L[4] = {47,42,43,44};
int orange_L[4] = {49,42,43,44};
int green_Z[4] = {48,49,42,43};
int red_Z[4] = {47,48,43,44};
int cyan_stick = {41,42,43,44};
Adafruit_NeoPixel pixels = Adafruit_NeoPixel(PIXEL_COUNT, PIXEL_PIN, NEO_GRB + NEO_KHZ800);

bool oldState = HIGH;
int showType = 0;
void setup() {
  // put your setup code here, to run once:
  pinMode(BUTTON_PIN, INPUT_PULLUP);
  pixels.begin();
  pixels.show();
}

void loop() {
  // put your main code here, to run repeatedly:
  for (int i = 0; i<4; i++){
   pixels.setPixelColor(yellow_block[i], pixels.Color(255,255,0)); 
  }
  pixels.show();
  delay(500);
  for (int i = 0; i<4; i++){
   pixels.setPixelColor(yellow_block[i], pixels.Color(0,0,0)); 
  }
  pixels.show();
  drop_pixels();
}

void drop_pixels(){
  for (int i = 0; i<4; i++){
    box[i]=box[i]-5;
  }
}
